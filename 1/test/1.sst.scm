(:bar
  :background-color #(0.8 0.8 0.8)
  :border-style-bottom solid
  :border-color-bottom #(0.5 0.5 0.5)
  :min-size #(600 0))

(.label
  :margin-left 10
  :font-size 10)

(.file
  :background-color #(1 1 1)
  :border-style-left solid
  :border-color-left #(0.4 0.4 1)
  :font-size 10)

(:viewport
  :background-color #(1 1 1)
;  :background-image "./test/bg.png"
)

(:wrapper
  :flow vertical)

(:title
  :font-size 40
  :width "40%"
  :background-color #(0.8 0.8 0.8)
  :border-style-bottom solid
  :border-color-bottom #(0.6 0.6 0.6)
  :border-style-right solid
  :border-color-right #(0.5 0.5 0.5)
  :border-style-top solid
  :border-color-top #(0.65 0.65 0.65)
  :margin-left 10
  :margin-top 10
  :margin-bottom 10
  :border-style-left solid
  :border-color-left #(0.7 0.7 0.7))

(:isbn
   :font-size 14
   :color #(0 0.6 0)
   :border-style-bottom solid
   :border-color-bottom #(0 0.6 0))

(.author
  :margin-right 100)

(.translater
  :font-weight bold
  :width "20%"
  :background-color #(1 0 0 0.3))

(.chapter
  :font-weight bold)

(.hover
  :background-color #(0 0 1 0.3)
  :font-size 24)

(:intro
  :font-weight normal :background-color #(0.5 0.6 1))

(all
  :width "30%")
